# ============================================
# API-GREENEX - Ejemplo de Configuración
# ============================================
# Copia este archivo a .env y ajusta los valores según tu entorno

# ============================================
# PostgreSQL - Base de Datos Principal
# ============================================
GREENEX_PG_HOST=localhost
GREENEX_PG_PORT=5432
GREENEX_PG_USER=postgres
GREENEX_PG_PASSWORD=
GREENEX_PG_DATABASE=greenex_db
GREENEX_PG_SSLMODE=disable
GREENEX_PG_APP_NAME=api-greenex
GREENEX_PG_MIN_CONNS=1
GREENEX_PG_MAX_CONNS=10
GREENEX_PG_CONNECT_TIMEOUT=10s
GREENEX_PG_HEALTHCHECK_INTERVAL=30s

# ============================================
# SQL Server - Base de Datos Calibrador
# ============================================
GREENEX_SSMS_HOST=localhost
GREENEX_SSMS_PORT=1433
GREENEX_SSMS_DB_USER=sa
GREENEX_SSMS_DB_PASSWORD=
GREENEX_SSMS_DB_NAME=calibrador_db
GREENEX_SSMS_DB_ENCRYPT=disable
GREENEX_SSMS_DB_TRUST_CERT=true
GREENEX_SSMS_APP_NAME=API-Greenex
GREENEX_SSMS_CONNECT_TIMEOUT=15
DB_MAX_CONNS=10
DB_MIN_CONNS=5
DB_MAX_CONN_LIFETIME=30m
DB_MAX_CONN_IDLE_TIME=5m

# ============================================
# OPC UA - WAGO PLC
# ============================================
OPCUA_ENDPOINT=opc.tcp://192.168.120.16:4840
OPCUA_USERNAME=
OPCUA_PASSWORD=
OPCUA_SECURITY_POLICY=Basic256Sha256
OPCUA_SECURITY_MODE=SignAndEncrypt
OPCUA_CERTIFICATE_PATH=
OPCUA_PRIVATE_KEY_PATH=
OPCUA_CONNECTION_TIMEOUT=10s
OPCUA_SESSION_TIMEOUT=60s
OPCUA_SUBSCRIPTION_INTERVAL=500ms
OPCUA_KEEPALIVE_COUNT=3
OPCUA_LIFETIME_COUNT=300
OPCUA_MAX_NOTIFICATIONS=0

# ============================================
# Cognex Scanner
# ============================================
COGNEX_HOST=0.0.0.0
COGNEX_PORT=8085
COGNEX_SCAN_METHOD=QR

# ============================================
# HTTP Server
# ============================================
HTTP_PORT=8080

# ============================================
# Sorter (Opcional)
# ============================================
SORTER_ID=1
SORTER_UBICACION=Ubicación Principal
SCAN_METHOD=QR
SALIDA_1=Salida Principal
SALIDA_2=Salida Secundaria
SALIDA_3=Salida Rechazo
